<form class="ui stacked segment form" action="/items/{{items.id}}/addItem" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Name</label>
      <input placeholder="Name" type="text" name="name" autofocus required>
    </div>
   <div class="field">
      <label>Description</label>
      <input placeholder="description" type="text" name="description" required>
    </div>
    <div class="field">
      <label>Value</label>
      <input placeholder="Value" type="text" name="value" required>
    </div>
   
  </div>
  <button class="ui blue submit button">Add item <i class="plus icon"></i></button>
</form>